{
  "root": true,
  "globals": {
    "atom": true
  },
  "extends": "steelbrain",
  "rules": {
    "global-require": "off",
    "no-param-reassign": "off",
    "no-underscore-dangle": "off",
    "no-duplicate-imports": "off",
    "import/prefer-default-export": "off",
    "import/no-unresolved": ["error", {
      "ignore": ["atom"]
    }]
  }
}
